    button {
      width: 20%;
      padding: 10px;
      margin-left: 5px;
      border: none;
      background: #28a745;
      color: white;
      font-size: 16px;
      border-radius: 5px;
      cursor: pointer;
    }

    button:hover {
      background: #218838;
    }

    ul {
      list-style-type: none;
